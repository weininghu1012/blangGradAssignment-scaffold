package matchings

/**
 * The uniform distribution over permutations. 
 */
model UniformPermutation {
  random Permutation permutation 
  param Simplex probabilities
  random IntVar a
  
  laws {
  	
  	a ~ Categorical(probabilities)
    logf(permutation) {
      - logFactorial(permutation.componentSize)*permutation.getConnections().get(0)
    }
  }
  generate(rand) {
    permutation.sampleUniform(rand)
  }
}
